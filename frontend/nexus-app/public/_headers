# Headers for Render Static Site
# Force no-cache on index.html to ensure latest JS is loaded

/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Assets with hash can be cached forever (immutable)
/assets/*
  Cache-Control: public, max-age=31536000, immutable
